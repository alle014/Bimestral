<title>Document</title>

</head><style>
  
    body{
  
        background-image: url(https://tse2.mm.bing.net/th/id/OIP.xQwhQeuxQuF5iqyUyGne2AHaEK?rs=1&pid=ImgDetMain&o=7&rm=3);
  
        background-size: cover;
  
    }
  

  
    #andar {
  
        background-image: url(https://tse2.mm.bing.net/th/id/OIP.dEDflCXPD8pA6V1rBDCX3QHaJO?rs=1&pid=ImgDetMain&o=7&rm=3);
  
        background-size: cover;
  
    }
  

  
    #chao{
  
        position: absolute;
  
        left: 0px;
  
        margin-top: 400px;
  
        width: 1000px;
  
        height: 300px;
  
        background-image: url(https://pixeljoint.com/files/icons/full/32xdirt.png);
  
        background-size: contain;
  
    }
  

  
    .pulo{
  
    animation: pulo 700ms ease-out
  
    }
  

  
    @keyframes pulo {
  
        0% {
  
            bottom: 0;
  
        }
  

  
        20% {
  
            bottom: 50px;
  
        }
  

  
        40% {
  
            bottom: 100;
  
        }
  

  
        50% {
  
            bottom: 120;
  
        }
  

  
        60% {
  
            bottom: 100;
  
        }
  

  
        80% {
  
            bottom: 50px;
  
        }
  

  
        100% {
  
            bottom:  0;
  
        }
  
    }
  

  
</style><body><div id="andar" style="width:100px; height:100px; position:relative;"></div>

<div id="chao"></div>

<script>
  
    const player = document.getElementById("andar");
  
    let posicaoX = 0;
  
    let posicaoY = 0;
  
    let velocidadeY = 0;
  
    let gravidade = 1;
  
    const alturaPlayer = 100;
  
    const YdoChao = 500; 
  

  
    document.addEventListener('keydown', function(event) {
  
        if (event.key === 'd') { 
  
            posicaoX += 10
  
            andar.style.left = posicaoX + 'px'
  
            andar.style.backgroundImage = 'url("https://tse2.mm.bing.net/th/id/OIP.dEDflCXPD8pA6V1rBDCX3QHaJO?rs=1&pid=ImgDetMain&o=7&rm=3")';
  
        }
  
    })
  

  
    document.addEventListener('keydown', ad)
  
    function ad(event) {
  
        if (event.key === 'a'){
  
            posicaoX -= 10
  
            andar.style.left = posicaoX + 'px'
  
            andar.style.backgroundImage = 'url("https://tse3.mm.bing.net/th/id/OIP.OZD9ppd_B7BXUYna71NIswHaKD?w=530&h=720&rs=1&pid=ImgDetMain&o=7&rm=3")';
  
        }
  
    }
  

  
    const larguraChao = 1000;
  
    const XdoChao = 0;
  

  
    function personagemCaindo() {
  
        velocidadeY += gravidade;
  
        posicaoY += velocidadeY;
  

  
    const dentroDoChao = posicaoX + 100 >= XdoChao && posicaoX <= XdoChao + larguraChao;
  

  
    if (velocidadeY > 0 && posicaoY + alturaPlayer >= YdoChao && dentroDoChao) {
  
        posicaoY = YdoChao - alturaPlayer;
  
        velocidadeY = 0;
  
    }
  

  
        player.style.top = posicaoY + "px";
  
    }
  
    setInterval(personagemCaindo, 30)
  

  
    document.addEventListener('keydown', pulo)
  
    function pulo(event){
  
        if (event.key === 'w')
  
        andar.classList.add('pulo')
  
    }
  
</script></body></html>
